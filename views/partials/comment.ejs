<div class="d-flex">
    <a href="">
        <img src="https://storage.googleapis.com/jammate-cs467_cloudbuild/profile-pictures/<%= commentData.userId %>?t=<%= Date.now() %>" class="rounded-circle" alt="User's Profile Picture" style="height: 40px" onerror="this.onerror=null; this.src='/no-profile-picture-15257.png'">
    </a>
    <div class="bg-body-tertiary rounded-3 px-3 py-1">
        <img id="likeButton-<%= commentData.commentId %>" class="likeButton"
        data-post-id="<%= postId %>" data-user-id="<%= userId %>" data-comment-id="<%= commentData.commentId%>"
        src="https://storage.googleapis.com/jammate-cs467_cloudbuild/htmlMedia/like.png" style="height: 20px" >

        <span id="likeCount-<%= commentData.commentId %>"><%= commentData.likeCount %></span>

        <img id="dislikeButton-<%= commentData.commentId %>" class="dislikeButton"
        data-post-id="<%= postId %>" data-user-id="<%= userId %>" data-comment-id="<%= commentData.commentId%>"
        src="https://storage.googleapis.com/jammate-cs467_cloudbuild/htmlMedia/dislike.png" style="height: 20px">
    </div>
    <div class="bg-body-tertiary rounded-3 px-3 py-1">
        <a href="" class="text-dark mb-0">
            <strong><%= commentData.nickname %></strong>
        </a>
    </div>
    <div class="bg-body-tertiary rounded-3 px-3 py-1">
        <% const localDateTime = new Date(commentData.timestamp).toLocaleString(); %>
        <%= localDateTime %>
    </div>
    <div class="bg-body-tertiary rounded-3 px-3 py-1">
        <p><%= commentData.commentText %></p>
    </div>
</div>