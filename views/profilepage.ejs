<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
  <title>JamMate</title>
</head>
<body class="container">
<%- include('partials/header', {user: loggedIn}) %>
  <h1><%= user.nickname %>'s Profile</h1>
  <p> <%= user.description %></p>
  <button type="button" data-mdb-button-init data-mdb-ripple-init class="btn btn-link btn-lg" data-mdb-ripple-color="dark">
    <i class="fas fa-share me-2"></i>Edit Self-Bio
  </button>
  <p>Contact me for gigs at <%= user.email %></p>
    <%- include('partials/post_form', {user: user}) %>



<table class="table table-hover table-forum text-center">
    <thead>
        <tr>
            <th></th>
            <th></th>
            <th></th>
        </tr>
    </thead>
<tbody>
          <% posts.forEach(function(post) { %>
            <div  class="post" id="post-<%= post.id %>">
                <tr>
                    <%- include('partials/post', {post_data: post}) %>
                    <td>
                        <button id="deleteButton-<%= post.id %>" onclick="deletePost(<%= post.id %>)">Delete Post</button>
                    </td>
                </tr>
            </div>
          <% }); %>
</tbody>
</table>

<script>
function deletePost(postId) {
      if (confirm('Are you sure you want to delete this post?')) {
          $.ajax({
              url: '/delete-post/' + postId,
              type: 'DELETE',
              success: function(result) {
                document.getElementById('deleteButton-'+postId).innerText = "Deleted";
                $('#post-' + postId).remove();
              },
              error: function(xhr, status, error) {
                  alert("Error deleting post: " + xhr.responseText);
              }
          });
      }
    }
</script>
</body>
<footer>
    <%- include('partials/footer') %>
</footer>
</html>