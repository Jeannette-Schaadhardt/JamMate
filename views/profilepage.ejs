<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
  <link href="/jammateCSS.css" rel="stylesheet">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
  <title>JamMate</title>
</head>
<body class="container bg-light">
    <%- include('partials/header', {user: loggedIn}) %>
    <div class="row">
        <div class="col-md-4">
            <div class="bio-box">
                <h1><%= user.nickname %>'s Profile</h1>
                <p><%= user.description %></p>
                <p>Skill Level: <%= user.skillLevel %></p>
                <p>Location: <%= user.location %></p>
                <p>Instrument: <%= user.instrument %></p>
                <button type="button" class="btn btn-primary">
                    <a href="/user/edit" class="text-white">Edit Bio</a>
                </button>
            </div>
        </div>
        <div class="col-md-8">
            <div class="d-flex justify-content-start mb-3 form-top-padding">
                <div class="me-2">
                    <%- include('partials/ad_form', {user: user}) %>
                </div>
                <div>
                    <%- include('partials/post_form', {user: user}) %>
                </div>
            </div>
            <h2>My Ads Posted on JamMate</h2>
            <% ads.forEach(function(ad) { %>
                <% if (ad.userId === user.sub) { %>
                    <div class="ad" id="ad-<%= ad.adId %>">
                        <%- include('partials/userAd', {ad_data: ad, userData: user}) %>
                    </div>
                <% } %>
            <% }); %>
            <h2>My posts on JamMate</h2>
            <% posts.forEach(function(post) { %>
                <div class="post" id="post-<%= post.postId %>">
                    <div class="post-content">
                        <%- include('partials/post', {loggedIn: loggedIn, post_data: post, userData: user}) %>
                    </div>
                </div>
            <% }); %>
            <div class="mt-3 text-end">
                <button onclick="deleteAllPosts('<%= user.nickname %>')" class="btn btn-danger">
                    Delete All Posts
                </button>
            </div>
        </div>
    </div>
    <%- include('partials/footer') %>
</body>
</html>
