<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
  <title>JamMate</title>
</head>
<body class="container">
    <%- include('partials/header', {user: loggedIn}) %>
    <h1><%= user.nickname %>'s Profile </h1>

    <p> <%= user.description %></p>
    <button type="button" data-mdb-button-init data-mdb-ripple-init class="btn btn-link btn-lg" data-mdb-ripple-color="dark">
      <a href="/user/edit">Edit Your Bio</a>

      <%- include('partials/ad_form', {user: user}) %>
      <%- include('partials/post_form', {user: user}) %>


<table class="table table-hover table-forum text-center">
    <thead>
        <tr>
            <th></th>
            <th></th>
            <th></th>
        </tr>
    </thead>
<tbody>

          <% posts.forEach(function(post) { %>
            <div  class="post" id="post-<%= post.postId %>">
                <tr>
                    <%- include('partials/post', {post_data: post}) %>
                </tr>
            </div>
          <% }); %>
          <button onclick="deleteAllPosts('<%= user.nickname %>')">Delete all of <%= user.nickname%>'s posts
          </button>
          <%- include('partials/ad', {ad_data: ads}) %>

</tbody>
</table>
</button>

</body>
<footer>
    <%- include('partials/footer') %>
</footer>
</html>