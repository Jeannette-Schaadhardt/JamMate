<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
  <title>JamMate</title>
</head>
<body class="container">
    <%- include('partials/header', {user: loggedIn}) %>
    <h1><%= user.nickname %>'s Profile </h1>

    <div class="container">
        <div class="row">
            <div class="col">
                <button type="button" class="btn btn-info">
                    <a href="/user/edit">Edit Bio</a>
                </button>
            </div>
            <div class="col">
                <div>
                    <%- include('partials/ad_form', {user: user}) %>
                </div>
            </div>
            <div class="col">
                <div>
                    <%- include('partials/post_form', {user: user}) %>
                </div>
            </div>
        </div>
    </div>
    <table class="table table-hover table-forum text-center">
        <thead>
            <tr>
                <th></th>
                <th></th>
                <th></th>
            </tr>
        </thead>
    <tbody>
        <div class="mt-2 col-md-12">
            <h2>My posts on JamMate</h2>
            <% posts.forEach(function(post) { %>
            <div  class="post" id="post-<%= post.postId %>">
                <tr>
                    <%- include('partials/post', {post_data: post}) %>
                </tr>
            </div>
            <% }); %>
        </div>
    </tbody>
</table>
<button class="btn btn-danger" type="button" onclick="deleteAllPosts('<%= user.nickname %>')">Delete all of <%= user.nickname%>'s posts
</button>
<h2>My Ads Posted on JamMate</h2>
<%- include('partials/userAd', {ad_data: ads}) %>
<% ads.forEach(function(ad) { %>
    <% if (ad.userId === user.sub) { %>
        <div  class="ad" id="ad-<%= ad.adId %>">
            <tr>
                <%- include('partials/userAd', {ad_data: ad}) %>
            </tr>
        </div>
    <% } %>
<% }); %>
</body>
<footer>
    <%- include('partials/footer') %>
</footer>
</html>